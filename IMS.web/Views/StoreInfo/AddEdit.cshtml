@model IMS.models.Entity.StoreInfo

@if (Model.Id > 0)
{
    <h1>Edit Store Info</h1>
}
else
{
    <h1>Create Store Info</h1>
}

<form asp-action="AddEdit">
    <div class="form-group col-6">
        <label asp-for="StoreName" class="control-label"></label>
        <input asp-for="StoreName" class="form-control" />
        <span asp-validation-for="StoreName" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <label asp-for="PanNo" class="control-label"></label>
        <input asp-for="PanNo" class="form-control" />
        <span asp-validation-for="PanNo" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <label asp-for="RegistrationNo" class="control-label"></label>
        <input asp-for="RegistrationNo" class="form-control" />
        <span asp-validation-for="RegistrationNo" class="text-danger"></span>
    </div>

    <div class="form-group col-6">
        <div class="form-check">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsActive">Active:@(Model.IsActive ? "TRUE" : "FALSE")</label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-6">
        <button type="submit" class="btn btn-primary float-left mt-2">@((Model.Id > 0) ? "Update" : "Create")</button>
            <a href="@Url.Action("Index", "StoreInfo")" class="btn btn-secondary float-end mt-2">Back</a>
    </div>
        
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}