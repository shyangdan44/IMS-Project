@model IMS.web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}



<h1>@ViewData["Title"]</h1>
<h2>Create a new account.</h2>
<hr />



<form id="registerForm" action="AddUser" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Address" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            @*  <div class="form-floating">
            <select asp-for="Input.StoreId" class="form-control" asp-items="@(new SelectList(Model.StoreInfoList.Items, "Id", "StoreName"))">
            <option value=null>Please Select </option>
            </select>
            <label asp-for="Input.StoreId"></label>
            <span asp-validation-for="Input.StoreId" class="text-danger"></span>
            </div> *@
            <div class="form-floating">
                <select asp-for="StoreId" class="form-control" asp-items="@(new SelectList(ViewBag.StoreInfo, "Id", "StoreName"))">
                    <option value=null>-Choose-</option>
                </select>
                <label asp-for="StoreId"></label>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <select asp-for="UserRoleId" class="form-control">
                    <option value=null>-Choose-</option>
                    <option value="ADMIN">ADMIN </option>
                    <option value="COUNTER">COUNTER </option>
                    <option value="STORE">STORE </option>
                    <option value="PUBLIC">PUBLIC </option>

                </select>
                <label asp-for="UserRoleId"></label>
                <span asp-validation-for="UserRoleId" class="text-danger"></span>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <button asp-action="Index" type="submit" class="w-100 btn btn-lg btn-primary">Back</button>
        </div>
        <div class="col-6">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary float-end">Register</button>
        </div>
    </div>
</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}